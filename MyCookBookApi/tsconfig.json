{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "include": ["src/**/*.ts"],
}